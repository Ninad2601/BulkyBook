@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 pb-4">
        <div class="col-md-6">
            <h4 class="text-primary">Category List</h4>
        </div>
        <div class="col-md-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp; Create New</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
        <th>Category Name</th>
        <th>Display Order</th>
        <th>Date Created</th>
        <th>Action</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">@item.Name</td>
                    <td width="10%">@item.DisplayOrder</td>
                    <td width="20%">@item.CreatedDateTime</td>
                    <td width="30%">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i>&nbsp; Edit</a> ||
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> <i class="bi bi-trash"></i>&nbsp; Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

